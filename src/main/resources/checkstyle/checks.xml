<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Puppy Crawl//DTD Check Configuration 1.2//EN"
    "http://www.puppycrawl.com/dtds/configuration_1_2.dtd">
<module name="Checker">
	<property name="charset" value="UTF-8"/>
    <module name="TreeWalker">
        <property name="tabWidth" value="4"/>
        <!-- Importaciones no especificas (*) -->
        <module name="AvoidStarImport"/>
        <!-- Formato para el nombre de constantes. -->
        <module name="ConstantName"/>
        <!-- Identación de comentarios. -->
        <module name="CommentsIndentation"/>
        <!-- Identación de código. -->
        <module name="Indentation"/>
        <!-- Formato de comentarios javadoc en métodos. -->
        <module name="JavadocMethod"/>
        <!-- Formato de comentarios javadoc en variables. -->
        <module name="JavadocVariable"/>
        <!-- Longitud de líneas. -->
        <module name="LineLength">
        	<property name="max" value="90"/>
        </module>
        <!-- Importaciones sin uso. -->
        <module name="RedundantImport"/>
    </module>
</module>